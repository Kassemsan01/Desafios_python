# Crie uma função fala se um número é par ou ímpar.
# Retorne se o número é par ou ímpar.

def par_impar (multiplica):
    
    multiplo_de_dois = multiplica % 2 == 0

    if multiplo_de_dois:
        return f'{multiplica} é par'
    return f'{multiplica} é impar'

imp=(10+9)
print(par_impar(imp))
